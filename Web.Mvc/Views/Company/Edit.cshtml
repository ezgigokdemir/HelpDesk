
@{
    ViewData["Title"] = "Firma Düzenleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="app">
    <div v-cloak class="ml-4">

        <div class="bg-body-light">
            <div class="content content-full content-top-custom">
                <div class="d-flex flex-column flex-sm-row justify-content-sm-between align-items-sm-center">
                    <h4 class="flex-sm-fill font-size-h2 font-w400 mt-2 mb-0 mb-sm-2">Firma Düzenleme</h4>
                    <nav class="flex-sm-00-auto ml-sm-3" aria-label="breadcrumb">
                        <a href="javascript:void(0)" onclick="javascript:history.back();" class="btn btn-gray mr-1 mb-3" style="background:#4e73df;color:white">
                            <span style="display:block;"><i class="fa fa-fw fa-arrow-circle-left fa-2x" style="color:white"></i></span> Geri
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="block block-rounded block-bordered block-fx-shadow">
                <div class="block-header block-header-default">
                    <h3 class="block-title"></h3>
                    <div class="block-options">
                        <div class="block-options-item">
                        </div>
                    </div>
                </div>
                <div class="block-content">
                    <message v-for="message in config.messages" v-bind:type="message.type" v-bind:content="message.content"></message>
                    <div class="row ml-4">
                        <div class="col-lg-7">
                            <form class="form">

                                <h4 class="content-heading">Firma Bilgileri</h4>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" for="">Firma İsmi</label>
                                    <div class="col-sm-9">
                                        <input v-model="companyDto.CompanyName" v-validate="'required'" type="text" class="form-control form-control-alt" placeholder="" name="CompanyName" data-vv-as="İsim">
                                        <span class="error" v-if="errors.has('CompanyName')">{{errors.first('CompanyName')}}</span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label" for="">Kullanıcı Limiti</label>
                                    <div class="col-sm-9">
                                        <input v-model="companyDto.UserLimit" v-validate="'required'" type="number" class="form-control form-control-alt" placeholder="" name="UserLimit" data-vv-as="İsim">
                                        <span class="error" v-if="errors.has('UserLimit')">{{errors.first('CompanyName')}}</span>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-8 ml-auto">
                                        <button type="button" v-on:click="onSubmit" class="btn btn-primary">Kaydet</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var companyDto = @Html.Raw(ViewBag.CompanyModel);
</script>
<script src="~/js/dist/component/company/edit.js" asp-append-version="true"></script>

